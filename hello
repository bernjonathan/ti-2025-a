<body>
  <div class="card">
    <h1>Halo!</h1>
    <p>Ini halaman HTML sederhana. Klik tombol di bawah untuk melihat aksi kecil.</p>
    <button id="btn">Klik aku</button>
    <p id="count" style="margin-top:12px;color:#64748b">Diklik: 0 kali</p>
  </div>

  <script>
    let cnt = 0;
    document.getElementById('btn').addEventListener('click', ()=>{
      cnt++;
      document.getElementById('count').textContent = 'Diklik: ' + cnt + ' kali';
      if(cnt % 5 === 0) alert('Wah, sudah ' + cnt + ' klik!');
    });
  </script>
